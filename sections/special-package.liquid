{% schema %}
  {
    "name": "Special Package",
    "class" : "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Special Package"
      }
    ],
    "blocks" : [
    {
      "type": "text",
      "name": "Content",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Head Title",
          "default": "Write Your Title"
        },
        {
          "type": "image_picker",
          "id": "star-image",
          "label": "Rating"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "Price"
        }
      ]
    },
    {
      "type": "button",
      "name": "Cart Button",
      "limit": 1,
      "settings": [
        {
          "type": "text", 
          "id": "button_label",
          "default": "Button label",
          "label": "Cart Button",
          "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Url"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Title",
      "settings": [
        {
          "type": "text",
          "id": "head",
          "label": "Head"
        },
        {
          "type": "richtext",
          "id": "des",
          "label": "Description"
        }
      ]
    },
      {
      "type": "grid",
      "name": "Grid-Content",
      "settings": [
        {
          "type": "image_picker",
          "id": "grid-image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "grid-title",
          "label": "Grid Title",
          "default": "Write Your Title"
        },
        {
          "type": "image_picker",
          "id": "grid-star-image",
          "label": "Rating"
        },
        {
          "type": "text",
          "id": "grid-price",
          "label": "Price",
          "default": "Price"
        },
        {
          "type": "text",
          "id": "grid-details",
          "label": "Destails",
          "default": "See More Data"
        }
      ]
    }
  ],
    "presets": [
      {
        "name": "Special Package"
      }
    ]
  }
{% endschema %}
